<%= simple_form_for([:position, @resume]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div>
      <label>名字:</label>
      <%= f.input_field :name %>
    </div>

    <div>
      <label>电话:</label>
      <%= f.input_field :phone %>
    </div>
    <div>
      <label>邮箱:</label>
      <%= f.input_field :email %>
    </div>
    <div>
      <label>个人描述（300字以内）:</label>
      <%= f.input_field :content, as: :text %>
    </div>
    <div>
      <label>上传简历:</label>
      <%= f.input_field :avatar %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '提交' %>
  </div>
<% end %>
