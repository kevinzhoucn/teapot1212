<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,class: "submitbtn", value: "确定" %>
  </div>
<% end %>
