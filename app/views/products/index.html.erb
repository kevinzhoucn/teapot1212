<style type="text/css">
@import url('/css/tabbing.css');
</style>
<div class="content txt_h">
  <h2>产品体系</h2>
  <hr />
  <div class="col-left-2">
    <ul>
      <li id="label1">
        新品速递
      </li>
      <li id="label2">
        特色服务
      </li>
      <li id="label3">
        明星产品
      </li>
    </ul>
  </div>
  <div class="tabs col-left-8">
    <div id="content1" class="tabcontent" style="display:block">
      <section>
        <ul class="lb-album">
          <% @products.each do |product| %>
            <li>
              <a href="<%= product %>">
                <img src="<%= product.avatar.url %>" />
                <span><%= product.name %></span>
              </a>
            </li>
          <% end %>
        </ul>
        
