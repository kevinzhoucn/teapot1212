<style type="text/css">
@import url('/css/tabbing.css');
</style>
<div class="content txt_h">
  <h2>产品体系</h2>
  <hr />
  <div class="col-left-2">
    <ul>
      <li id="label1">
        新品速递
      </li>
      <li id="label2">
        特色服务
      </li>
      <li id="label3">
        明星产品
      </li>
    </ul>
  </div>
  <div class="tabs col-left-8">
    <div id="content1" class="tabcontent" style="display:block">
      <section>
        <ul class="lb-album">
          <% @product_new.each do |product| %>
            <li>
              <a href="<%= product_path(product) %>" style="width:100%;height:100%">
                <img src="<%= product.avatar.url %>" style="width:100%;height:100%" />
                <span><%= product.name %></span>
              </a>
            </li>
          <% end %>
        </ul>  
      </section>
    </div>

    <div id="content2" class="tabcontent">
      <section>
        <ul class="lb-album">
          <% @product_special.each do |product| %>
            <li>
              <a href="<%= product_path(product) %>" style="width:100%;height:100%">
                <img src="<%= product.avatar.url %>" style="width:100%;height:100%" />
                <span><%= product.name %></span>
              </a>
            </li>
          <% end %>
        </ul>
      </section>
    </div> 

    <div id="content3" class="tabcontent">
      <section>
        <ul class="lb-album">
          <% @product_star.each do |product| %>
            <li>
              <a href="<%= product_path(product) %>" style="width:100%;height:100%">
                <img src="<%= product.avatar.url %>" style="width:100%;height:100%" />
                <span><%= product.name %></span>
              </a>
            </li>
          <% end %>
        </ul>
      </section>
    </div>
  </div>
</div>
<script type="text/javascript" src="/js/tabbing.js"></script>