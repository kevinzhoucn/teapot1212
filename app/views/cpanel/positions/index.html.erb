<h1>设置在线招聘</h1>
<hr>
<div class="listing">
  <div style="width:300px">
    <h2>招聘职位列表</h2>
  </div>
  <ul style="list-style:none">
    <% @cpanel_positions.each do |position| %>
    <li>
      <div class="list-title">
        <%= position.title %>
      </div>
      <div style="width:auto;float:left">
        <%= position.status %>
      </div>
      <%= image_tag position.avatar.url(:thumb) %>
      <div class="list-action">
        <%= link_to '编辑', edit_cpanel_position_path(position) %>
      </div>
      <div class="list-action">
        <%= link_to '删除', cpanel_position_path(position), method: :delete, data: { confirm: '确定要删除这个职位吗？' } %>
      </div>
    </li>
    <% end %>
  </ul>
  <div style="height:35px;line-height:35px;">
    <%= link_to '添加新职位', new_cpanel_position_path %>
  </div>
</div>