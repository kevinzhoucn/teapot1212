<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>content</th>
      <th>type_id</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_cpanel_product_path(product) %></td>
        <td><%= link_to 'Destroy', cpanel_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

