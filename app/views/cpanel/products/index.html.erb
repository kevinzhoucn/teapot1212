<h2>产品管理</h2>
<div class="btn-container">
  <%= link_to '添加新产品', new_cpanel_product_path, class:"brivates-button" %>
</div>
<hr>
  <% @products.each do |product| %>
    <ul>
      <li style="line-height:30px;">
        <%= product.name %> &nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to '删除', cpanel_product_path(product), method: :delete, data: { confirm: '确定要删除这个产品吗？' }, class:"brivates-button", style:"float:right" %>
        <%= link_to '编辑', edit_cpanel_product_path(product), class:"brivates-button", style:"float:right"%>
      </li>
    </ul>
    <% end %>
<hr>
<div class="btn-container">
  <%= link_to '添加新产品', new_cpanel_product_path, class:"brivates-button" %>
</div>
