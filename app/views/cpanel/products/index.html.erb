<h1>产品管理</h1>
<hr>
<div class="listing">
  <div style="width:300px">
    <h2>当前产品列表</h2>
  </div>
  <ul style="list-style:none">
    <% @products.each do |product| %>
    <li>
      <div class="list-title">
        <%= product.name %>
      </div>
      <div class="list-action">
        <%= link_to '编辑', edit_cpanel_product_path(product) %>
      </div>
      <div class="list-action">
        <%= link_to '删除', cpanel_product_path(product), method: :delete, data: { confirm: '确定要删除这个产品吗？' } %>
      </div>
    </li>
    <% end %>
  </ul>
  <div style="height:35px;line-height:35px;">
    <%= link_to '添加新产品', new_cpanel_product_path %>
  </div>
</div>