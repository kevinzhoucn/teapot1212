<h2>设置图片轮播</h2>
<div class="btn-container">
    <%= link_to '添加图片', new_cpanel_slide_path, class:"brivates-button" %>
</div>
<hr>
  <% @cpanel_slides.each do |cpanel_slide| %>
      <%#= cpanel_slide.title %>
      <ul>
        <li style="border-bottom:1px solid gray">
          <%= image_tag cpanel_slide.avatar.url(:thumb) %>
          <%= link_to '删除', cpanel_slide_path(cpanel_slide), method: :delete, data: { confirm: '确定要删除这张图片吗？' }, class:"brivates-button", style:"float:right" %> 
          <%= link_to '编辑', edit_cpanel_slide_path(cpanel_slide), class:"brivates-button", style:"float:right" %>
                   
        </li>
      </ul>
  <% end %>
<hr>
<div class="btn-container">
  <%= link_to '添加图片', new_cpanel_slide_path, class:"brivates-button" %>
</div>