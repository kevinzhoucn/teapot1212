<%= simple_form_for(@position) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, as: :text %>
    <%= f.input :status %>
    <%= f.input :image_url_type, collection: [ ['0', '店长'], ['1', '员工'] ] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
