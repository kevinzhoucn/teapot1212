<div class="content txt_h">
  
  <div class="submenu">
    <ul>      
      <li><a href="/about"><a href="/about">企业形象</a></li>
      <li><a href="/corpnews">企业新闻</a></li>
      <li class="current"><a href="/positions">在线招聘</a></li>
    </ul>
  </div>
  <h2>美丽资讯</h2>
  <hr>
  <div>
    <% @positions.each do |position| %>
      <div style="display:block;height:auto;overflow:hidden;margin:10px 0 10px 0;padding-bottom:15px;">
        <% if position.image_url_type == 0 %>
          <% position_image_url = @position_image_employee %>
        <% else %>
          <% position_image_url = @position_image_manager %>
        <% end %>
        <img src="<%= position.avatar.url(:thumb) %>" class="aboutbrivates" style="border:5px solid #fff;box-shadow:0 0 20px #999" />
        <h2><%= position.title %></h2>
        <p style="font-size:1.2em"><%= position.content.html_safe %></p>
        <div class="btn">
          <%= link_to '详细信息', position %>
        </div>
        <div class="btn">
          <%= link_to '申请职位', new_position_resume_path(position) %>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>